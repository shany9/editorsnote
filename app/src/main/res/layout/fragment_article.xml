<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBDCDC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/RL_header">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_toEndOf="@+id/tv_1" />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/l"
            android:textSize="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/m"
            android:layout_toLeftOf="@+id/m"
            android:layout_toStartOf="@+id/m"
            android:textColor="#ff4b4c4c" />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/m"
            android:textSize="16dp"
            android:background="#00ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ff4b4c4c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night Theme"
            android:id="@+id/tv_1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff4b4c4c"
            android:layout_marginLeft="10dp"
            android:textSize="16dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox"
            style="?android:attr/starStyle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:checked="false" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBDCDC"
        android:fillViewport="false">

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:elegantTextHeight="true"
            android:text="Article"
            android:textColor="#3B3A39"
            android:textSize="17dp"
            android:background="#DBDCDC"

            />
    </ScrollView>

</LinearLayout>